{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch with Nodemon",
        "runtimeExecutable": "nodemon",  // Use nodemon to restart the server automatically
        "program": "${workspaceFolder}/index.js",  // Your entry point file, change if it's different
        "args": ["--inspect"],  // Enable debugging by using the --inspect flag
        "skipFiles": ["<node_internals>/**"],  // Skip internal Node.js files (optional)
        "env": {
          "NODE_ENV": "development"  // Set your environment variable if needed
        }
      }
    ]
  }
  